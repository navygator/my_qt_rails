<ul class="users">
  <% friends.each do |friend| %>
    <li>
      <div class="user-info">
        <%= image_tag friend.photo, class: "avatar" %>
        <h3><%= "#{friend[:firstName]} #{friend[:lastName]}" %></h3>
      </div>
      <div class="user-controls">
        <%= link_to "delete",
                    unfriend_user_path(friend.id),
                    class: "btn btn-danger",
                    data: { confirm: "Are you sure?" } %>
      </div>
    </li>
  <% end %>
</ul>
<%= link_to "delete all", unfriend_all_user_path, class: "btn btn-danger" if friends.count > 0 %>
