<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4 user-info" >
    <section>
      <%= image_tag @user.foursquare_user[:photo], class: "avatar" %>
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span6">
    <div class="tabbable tabs-right">
      <ul class="nav nav-tabs">
        <li class="active"><a href="#tab_friends" data-toggle="tab">
          Friends (<%= @user.friends.count %>)</a></li>
        <li><a href="#tab_requests" data-toggle="tab">
          Requests (<%= @user.requests.count %>)</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="tab_friends">
          <%= render 'friends', friends: @user.friends %>
        </div>
        <div class="tab-pane" id="tab_requests">
          <%= render 'requests', requests: @user.requests %>
        </div>
      </div>
    </div>
  </div>
</div>

